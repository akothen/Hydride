<access_mechanisms>
  


      <access_mechanism accessor="MRS MVFR0_EL1">
        <encoding>
          
          <access_instruction>MRS &lt;Xt&gt;, MVFR0_EL1</access_instruction>
            
            <enc n="op0" v="0b11"/>
            
            <enc n="op1" v="0b000"/>
            
            <enc n="CRn" v="0b0000"/>
            
            <enc n="CRm" v="0b0011"/>
            

      <access_mechanism accessor="MRS CLIDR_EL1">
        <encoding>
          
          <access_instruction>MRS &lt;Xt&gt;, CLIDR_EL1</access_instruction>
            
            <enc n="op0" v="0b11"/>
            
            <enc n="op1" v="0b001"/>
            
